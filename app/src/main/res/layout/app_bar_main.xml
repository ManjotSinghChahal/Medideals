<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        tools:context=".ui.activities.home.HomeActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/colortheme">


            <RelativeLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/rel_menu_home">

                <ImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:id="@+id/img_drawer"
                        android:layout_centerInParent="true"
                        android:src="@drawable/menu"/>

                <ImageView
                        android:layout_width="@dimen/_19sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:id="@+id/img_back_drawer"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:src="@drawable/back_icon"/>

            </RelativeLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/title_home"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_centerInParent="true"
                    android:text="@string/medideals"/>


            <RelativeLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/viewcart_home"
                    android:visibility="gone"
                    android:layout_alignParentRight="true">

                <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/shopping_cart"/>


                <RelativeLayout
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:id="@+id/rel_cartBack"
                        android:visibility="gone"
                        android:background="@drawable/circle_red"
                        android:layout_alignParentRight="true">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/cartCount_home"
                            android:textSize="@dimen/_9sdp"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"/>

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:id="@+id/rel_search_filter_home"
                    android:layout_alignParentRight="true">

                <RelativeLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:id="@+id/rel_search_home">
                    <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/search"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:id="@+id/rel_filter_home">
                    <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:src="@drawable/filter"/>

                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:id="@+id/rel_addCard"
                    android:visibility="gone"
                    android:layout_alignParentRight="true">
                <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/add"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:id="@+id/rel_edit_home"
                    android:visibility="gone"
                    android:layout_alignParentRight="true">
                <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/edit"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:id="@+id/rel_filterTick_home"
                    android:visibility="gone"
                    android:layout_alignParentRight="true">
                <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/tick"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:id="@+id/rel_filterClose_home">
                <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/close"/>

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/relLay_search_home"
                android:visibility="gone"
                android:background="@color/colortheme">
            <RelativeLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/rel_homeSearch_back">

                <ImageView
                        android:layout_width="@dimen/_19sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/back_icon"/>

            </RelativeLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:id="@+id/rel_homeSearch_edt"
                    android:backgroundTint="@color/colorWhite"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:paddingLeft="@dimen/_6sdp"
                    android:paddingRight="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_50sdp"/>
            <RelativeLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/rel_homeSearch_close">

                <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/close"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container_home">
        </FrameLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/rel_filterHome"
                        android:background="#DAABABAB">


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="@dimen/_80sdp"
                    android:id="@+id/container_filter">
            </FrameLayout>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>