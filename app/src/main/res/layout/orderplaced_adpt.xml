<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#EFEFF4"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_6sdp"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_52sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/logo"
                        android:layout_marginTop="@dimen/_16sdp"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lin_orderDetails"
                        android:paddingRight="@dimen/_2sdp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack"
                                android:text="@string/order_no_"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold"
                                android:id="@+id/invoiceNo_orderPlaced"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:textColor="@color/colorBlack"
                                android:text="1002"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_textcolor_blackish"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/order_date"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/date_orderPlaced"
                                android:textColor="@color/color_textcolor_blackish"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:text="19/05/2019"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/color_textcolor_blackish"
                                android:text="@string/customer_no"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/phone_orderPlaced"
                                android:textColor="@color/color_textcolor_blackish"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:text="426394586"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/color_textcolor_blackish"
                                android:text="@string/total_amt"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:id="@+id/totalAmt_orderPlaced"
                                android:textColor="@color/color_textcolor_blackish"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:text="Rs. 2320"/>

                    </LinearLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/color_textcolor_blackish"
                                android:id="@+id/txt_orderStatus"
                                android:text="@string/money_status"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/color_green_shade"
                                android:id="@+id/moneyStatus_orderPlaced"
                                android:layout_toRightOf="@+id/txt_orderStatus"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:text="@string/money_rec"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/color_green_shade"
                                android:layout_below="@+id/txt_orderStatus"
                                android:text="@string/by_medideals"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:id="@+id/rel_expand_orderPlaced"
                        android:background="@drawable/rounded_theme_full"
                        android:layout_below="@+id/lin_orderDetails">

                    <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_centerInParent="true"
                            android:id="@+id/arrow_down_orderPlaced"
                            android:background="@drawable/arrow_down"/>

                    <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            android:id="@+id/arrow_up_orderPlaced"
                            android:background="@drawable/arrow_up"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!--<androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_height="@dimen/_2sdp">

    </androidx.cardview.widget.CardView>-->


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp">

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:id="@+id/view_orderPlaced"></View>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:visibility="gone"
                android:layout_margin="@dimen/_6sdp"
                android:id="@+id/lin_orderDetails_orderPlaced"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:text="@string/bill_to"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/billTo_orderPlaced"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textColor="@color/colorBlack"
                        android:text="ABC"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:text="@string/address"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/addressBillTo_orderPlaced"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textColor="@color/colorBlack"
                        android:text="423 Mohali,Punjab"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:text="@string/ship_to"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/shipTo_orderPlaced"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textColor="@color/colorBlack"
                        android:text="XYZ"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:text="@string/address"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/addressShipTo_orderPlaced"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textColor="@color/colorBlack"
                        android:text="12313 Chandigarh"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:text="@string/email_colon"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/email_orderPlaced"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textColor="@color/colorBlack"
                        android:text="abx@gmail.com"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:text="@string/total_price"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/totalPrice_orderPlaced"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textColor="@color/colorBlack"
                        android:text="Rs 2549"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:textColor="@color/colorBlack"
                        android:text="@string/product_details"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:text="@string/product_name"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/prodName_orderPlaced"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="MUESLI NUTTY DELIGHT 400 GM"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:text="@string/price_per_item"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:id="@+id/prodPrice_orderPlaced"
                            android:textColor="@color/colorBlack"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="Rs. 184.00"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:text="@string/qty"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:id="@+id/productQty_orderPlaced"
                            android:textColor="@color/colorBlack"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="2"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:text="@string/company"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:id="@+id/productComp_orderPlaced"
                            android:textColor="@color/colorBlack"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="GAIA"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:text="@string/order_status"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:id="@+id/orderStatus_orderPlaced"
                            android:textColor="@color/colorBlack"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="@string/delivered"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp"
                            android:text="@string/shipment_dockment_no"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/docketNo_orderPlaced"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="zxccv1234"/>
                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp">
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:id="@+id/changeOrderStatus_orderPlaced"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@drawable/rounded_theme_full">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/_11sdp"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_16sdp"
                                android:paddingRight="@dimen/_16sdp"
                                android:textColor="@color/colorWhite"
                                android:text="@string/edit_order_status"/>

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>