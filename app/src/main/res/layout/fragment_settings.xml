<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.activities.home.settings.Settings">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_theme_full"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:id="@+id/img_noti_settings"
                    android:layout_centerVertical="true"
                    android:background="@drawable/notification"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/push_noti"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="@dimen/_6sdp"
                      android:textColor="@color/colorWhite"
                      android:textSize="@dimen/_15sdp"
                      android:layout_toRightOf="@+id/img_noti_settings"/>


            <RelativeLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/rounded_full_white"
                    android:layout_alignParentRight="true">

                <RelativeLayout
                        android:layout_width="@dimen/_20sdp"
                                android:layout_height="match_parent"
                android:id="@+id/rel_toggleLeft_settings">
                    <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_centerVertical="true"
                            android:id="@+id/img_toggleLeft_settings"
                            android:layout_marginRight="@dimen/_1sdp"
                            android:background="@drawable/circled_grey"
                            android:layout_alignParentRight="true"/>

                </RelativeLayout>


                <RelativeLayout
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:id="@+id/rel_toggleRight_settings"
                android:layout_alignParentRight="true">
                <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:id="@+id/img_toggleRight_settings"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:background="@drawable/circled_them"/>


            </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorWhite"
                  android:layout_marginTop="@dimen/_6sdp"
                  android:textSize="@dimen/_11sdp"
                  android:layout_marginRight="@dimen/_70sdp"
                  android:text="@string/push_noti_details"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/rounded_theme_full">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:text="@string/privacy_policy"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/rounded_theme_full">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:text="@string/about_us"/>

    </LinearLayout>

</LinearLayout>