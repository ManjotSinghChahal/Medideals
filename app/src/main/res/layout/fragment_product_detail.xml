<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/rootProductDetail"
              tools:context=".ui.activities.home.productDetail.ProductDetail">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_margin="@dimen/_9sdp"
                    android:background="@drawable/lay_backround_rounded_corners">
                <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/logo"/>
            </RelativeLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:textSize="@dimen/_14sdp"
                        android:text="@string/max_retail_price"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/maxPrice_productDetail"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textSize="@dimen/_14sdp"
                        android:text="Rs 0"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp"
                        android:text="@string/dis_price"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/disPrice_productDetail"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="Rs 0"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp"
                        android:text="@string/min_order_qty"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/qty_productDetail"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="1"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp"
                        android:text="@string/discount"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/dis_productDetail"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text="0%"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp"
                        android:text="@string/categories"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/catName_productDetail"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text=""/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp"
                        android:text="@string/del_loc"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/loc_productDetail"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:textSize="@dimen/_13sdp"
                        android:text=""/>

            </LinearLayout>


            <RelativeLayout
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:background="#49C1E0"
                    android:id="@+id/rel_addToCart_prodDetail"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_gravity="center_horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addCart_productDetail"
                       android:layout_centerInParent="true"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/colorWhite"
                        android:text="@string/add_to_cart"
                        android:textAllCaps="true"/>

            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:background="#3FA9EC"
                    android:id="@+id/rel_contShopping_prodDetail"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/continueShop_prodDet"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/colorWhite"
                        android:text="@string/continue_shopping"
                        android:textAllCaps="true"/>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>