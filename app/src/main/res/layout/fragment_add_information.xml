<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rootAddInfo"
                android:background="@color/colortheme">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:textColor="@color/colorWhite"
                        android:text="@string/add_info"/>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:orientation="horizontal">
                    <View
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="4dp"
                            android:background="@drawable/round_white_full"></View>


                    <View
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="5dp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:background="@drawable/round_white_full"></View>

                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_26sdp"
                        android:textColor="@color/colorWhite"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:text="@string/enter_personal_info"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/contract"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/business_name"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/business_AddInfo"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/home"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/shop_no"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/shop_AddInfo"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/street"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/street_name"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/street_AddInfo"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/home"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/city"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/city_AddInfo"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/driving_license"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/lic_number"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/lic_AddInfo"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/gst_number"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/gst_number"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/gst_AddInfo"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>



                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:id="@+id/signup_addInfo"
                        android:background="@drawable/rounded_circle_corners_white">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textColor="@color/colorWhite"
                              android:textSize="@dimen/_16sdp"
                              android:layout_centerInParent="true"
                              android:textAllCaps="true"
                              android:text="@string/signup"/>

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>




</RelativeLayout>