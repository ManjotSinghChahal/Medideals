<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colortheme"
        android:id="@+id/rootProfile"
        tools:context=".ui.activities.home.profile.Profile">

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/gray"></View>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/colorWhite"
                        android:text="@string/profile"/>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:orientation="horizontal">
                    <View
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="4dp"
                            android:background="@drawable/round_white_full"></View>


                    <View
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="5dp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:background="@drawable/round_white_full"></View>

                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:text="@string/check_edit_inf"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/user_icon"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/business_name"
                                android:textAllCaps="true"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/business_profile"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/email_icon"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/email"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/email_profile"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textEmailAddress"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/device"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/contact_no"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:maxLength="10"
                                android:id="@+id/contact_profile"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="number"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/home"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/addres"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/address_profile"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/gst_number"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:id="@+id/gst_profile"
                                android:hint="@string/gst_no"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/driving_license"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:id="@+id/lic_profile"
                                android:hint="@string/lic_no"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/driving_license"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:hint="@string/fssai_no"
                                android:id="@+id/fssai_profile"
                                android:textColor="@color/color_grey"
                                android:textColorHint="@color/color_grey"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/driving_license"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:hint="@string/user_type"
                                android:id="@+id/userType_profile"
                                android:textColor="@color/color_grey"
                                android:textColorHint="@color/color_grey"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/driving_license"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:hint="@string/city"
                                android:id="@+id/city_profile"
                                android:textColor="@color/color_grey"
                                android:textColorHint="@color/color_grey"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/driving_license"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:id="@+id/shopNo_profile"
                                android:singleLine="true"
                                android:hint="@string/shop_no"
                                android:textColor="@color/color_grey"
                                android:textColorHint="@color/color_grey"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/driving_license"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:id="@+id/webUrl_profile"
                                android:hint="@string/website_url"
                                android:textColor="@color/color_grey"
                                android:textColorHint="@color/color_grey"
                                android:textSize="@dimen/_13sdp"
                                android:background="@null"
                                android:inputType="textCapSentences"
                                android:layout_gravity="center_vertical"/>


                    </RelativeLayout>


                </LinearLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:id="@+id/updateProfile"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:background="@drawable/rounded_circle_corners_white">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textColor="@color/colorWhite"
                              android:textSize="@dimen/_16sdp"
                              android:layout_centerInParent="true"
                              android:textAllCaps="true"
                              android:text="@string/update"/>

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>