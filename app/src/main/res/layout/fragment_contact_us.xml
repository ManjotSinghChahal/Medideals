<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colortheme"
                android:id="@+id/rootContactUs"
                tools:context=".ui.activities.login.loginFrag.Login">
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey"></View>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_29sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:textColor="@color/colorWhite"
                        android:text="@string/contact_us"/>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:orientation="horizontal">
                    <View
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="4dp"
                            android:background="@drawable/round_white_full"></View>


                    <View
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="5dp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:background="@drawable/round_white_full"></View>

                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_26sdp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:text="@string/fill_below_info"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/user_icon"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/name"
                                android:paddingLeft="@dimen/_6sdp"
                                android:id="@+id/edt_name_contactUs"
                                android:gravity="center_vertical"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_15sdp"
                                android:background="@null"
                                android:inputType="textCapWords"
                                android:textAllCaps="true"
                                android:singleLine="true"
                                android:layout_gravity="center_vertical"/>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/device"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+91-"
                                android:textSize="@dimen/_13sdp"
                                android:paddingLeft="@dimen/_6sdp"
                                android:visibility="gone"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/contact_no_settings"
                                android:layout_centerVertical="true"/>


                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/contact_no"
                                android:paddingLeft="@dimen/_6sdp"
                                android:id="@+id/edt_contact_no_contactUs"
                                android:layout_toRightOf="@+id/contact_no_settings"
                                android:gravity="center_vertical"
                                android:layout_marginRight="@dimen/_40sdp"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textAllCaps="true"
                                android:textSize="@dimen/_15sdp"
                                android:background="@null"
                                android:maxLength="10"
                                android:singleLine="true"
                                android:inputType="number"
                                android:layout_gravity="center_vertical"/>

                        <RelativeLayout
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="match_parent"
                                android:id="@+id/rel_cross_settings"
                                android:visibility="gone"
                                android:layout_alignParentRight="true">
                            <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/close"/>
                        </RelativeLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_white_corners">

                    <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/email_icon"/>
                    </RelativeLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorWhite"></View>


                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/email"
                                android:paddingLeft="@dimen/_6sdp"
                                android:id="@+id/edt_email_contactUs"
                                android:gravity="center_vertical"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="@color/colorWhite"
                                android:textSize="@dimen/_15sdp"
                                android:background="@null"
                                android:textAllCaps="true"
                                android:singleLine="true"
                                android:inputType="textEmailAddress"
                                android:layout_gravity="center_vertical"/>

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_8sdp"
                        android:background="@drawable/rounded_white_corners">


                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colorWhite"
                            android:id="@+id/edt_msg_contactUs"
                            android:hint="@string/message"
                            android:background="@null"
                            android:textColor="@color/colorWhite"/>

                </LinearLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:id="@+id/rel_submit_contactUs"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/rounded_circle_corners_white">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_16sdp"
                            android:textAllCaps="true"
                            android:id="@+id/submit_contactUs"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_centerInParent="true"
                            android:text="@string/submit"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>